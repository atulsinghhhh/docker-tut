# backend Dockerfile â€” run the Node app directly
FROM node:18-alpine

WORKDIR /app

# Copy package metadata and install
COPY package*.json ./
RUN npm install --silent
# Ensure 'pg' is installed (package-lock.json may have prevented picking up new dependency during build)
RUN npm install --silent pg

# Copy application source
COPY . .

EXPOSE 3000

CMD ["node", "src/index.js"]






